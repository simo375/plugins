<?xml version="1.0"?>
<layout version="0.1.0">
    <embeds_index_index>
        <reference name="content">
            <block type="core/template" name="embeds" template="embeds/embeds.phtml" />
        </reference>
    </embeds_index_index>
    <default>
        <reference name="head">
            <block type="embeds/splurgytemplates" name="splurgy.analytics.embed">
                 <action method="setTemplate">
                    <template>splurgy/analytics.phtml</template>
                </action>
            </block>
        </reference>
    </default>
    <catalog_product_view>
	    <reference name="product.info">
	        <block type="embeds/splurgytemplates" name="splurgy.offers.embed" template="splurgy/offers.phtml" before="product.description">
	            <action method="addToParentGroup"><group>detailed_info</group></action>
	        </block>
	    </reference>
    </catalog_product_view>
    <checkout_cart_index>
	    <reference name="content">
	        <block type="embeds/splurgytemplates" name="splurgy.offers.embed" template="splurgy/button.phtml" after="checkout.cart.form.before">
	        </block>
	    </reference>
    </checkout_cart_index>
</layout>
