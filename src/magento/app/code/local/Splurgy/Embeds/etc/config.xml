<config>    
    <modules>
        <Splurgy_Embeds>
            <version>0.1.0</version>
        </Splurgy_Embeds>
    </modules>
    <frontend>
        <routers>
            <embeds>
                <use>standard</use>
                <args>
                    <module>Splurgy_Embeds</module>
                    <frontName>embeds</frontName>
                </args>
            </embeds>
        </routers>  
        <layout>
            <updates>
                <embeds>
                    <file>splurgyEmbeds.xml</file>
                </embeds>
            </updates>
        </layout>
    </frontend>
    <global>
        <resources>
        <splurgy_embed_setup>
            <setup>
                <module>Splurgy_Embeds</module>
                <class>Splurgy_Embeds_Model_Mysql4_Setup</class>
            </setup>
        </splurgy_embed_setup>
        </resources>
        <models>
            <embeds>
                <class>Splurgy_Embeds_Model</class>
                <resourceModel>embeds_mysql4</resourceModel>
            </embeds>
            <splurgybanner>
                <class>Splurgy_Banner_Model</class>
                <resourceModel>banner_mysql4</resourceModel>
            </splurgybanner>
            <embeds_mysql4>
                <class>Splurgy_Embeds_Model_Mysql4</class>
                <entities>
                    <embeds>
                        <table>splurgy_embed</table>
                    </embeds>
                    <banner>
                        <table>splurgy_banner</table>
                    </banner>
                </entities>
            </embeds_mysql4>
        </models>
        <resources>
            <embeds_setup>
                <setup>
                    <embeds>Splurgy_Embeds</embeds>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </embeds_setup>
            <embeds_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </embeds_write>
            <embeds_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </embeds_read>
        </resources>
        <blocks>
            <embeds>
                <class>Splurgy_Embeds_Block</class>
            </embeds>
        </blocks>
        <helpers>
            <embeds>
                <class>Splurgy_Embeds_Helper</class>
            </embeds>
        </helpers>
    </global>
    <admin>
        <routers>
            <the_name_of_this_element_is_not_important_it_should_be_unique>
                <use>admin</use>
                <args>
                    <module>Splurgy_Embeds</module>
                    <frontName>splurgy</frontName>
                </args>
            </the_name_of_this_element_is_not_important_it_should_be_unique>
        </routers>
        <!-- default admin design package and theme -->
        <design>
            <package>
                <name>base</name>
            </package>
            <theme>
                <default>default</default>
            </theme>
        </design>
    </admin>
    <adminhtml>
        <menu>
            <embeds translate="title" module="embeds">
                <title>Splurgy</title> 
                <sort_order>9999</sort_order>
                <children>
                    <settings module="embeds">
                        <title>Checkout Page Switch</title> 
                        <action>embeds/index/settings</action>
                    </settings>
                </children>
                <children>
                    <items module="embeds">
                        <title>Manage Offers</title>
                        <sort_order>0</sort_order>
                        <action>embeds/adminhtml_embeds</action>
                    </items>
                </children>
                <children>
                    <splurgybanner module="embeds">
                        <title>Splurgy Banner</title>
                        <sort_order>1</sort_order>
                        <action>embeds/adminhtml_banner</action>
                    </splurgybanner>
                </children>
            </embeds>
        </menu> 
        <layout>
            <updates handle="index_settings">
                <embeds>
                    <file>splurgyEmbeds.xml</file>
                </embeds>
            </updates>
        </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <embeds_options>
                                            <title>Store Hello World Module Section</title>
                                        </embeds_options>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>